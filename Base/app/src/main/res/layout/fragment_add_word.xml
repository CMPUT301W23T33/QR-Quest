<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddWordFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_margin="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"
            android:textColor="@color/purple_200"
            android:textSize="12sp"
            android:text="Score: "
            android:layout_margin="8dp"
            android:id="@+id/qrscore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

        <TextView
            app:layout_constraintStart_toEndOf="@id/qrscore"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/qrcodescore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="QR Score"
            android:textColor="@color/colorAccent"
            android:textSize="12sp">

        </TextView>

        <TextView
            app:layout_constraintStart_toEndOf="@id/qrcodescore"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"
            android:textColor="@color/purple_200"
            android:textSize="12sp"
            android:text="Longitude: "
            android:layout_margin="8dp"
            android:id="@+id/qrlongitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

        <TextView
            app:layout_constraintStart_toEndOf="@id/qrlongitude"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/qrcodelongitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="QR Longitude"
            android:textColor="@color/colorAccent"
            android:textSize="12sp">

        </TextView>

        <TextView
            app:layout_constraintStart_toEndOf="@id/qrcodelongitude"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"
            android:textColor="@color/purple_200"
            android:textSize="12sp"
            android:text="Latitude: "
            android:layout_margin="8dp"
            android:id="@+id/qrlatitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

        <TextView
            app:layout_constraintStart_toEndOf="@id/qrlatitude"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/qrcodeslatitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="QR Latitude"
            android:textColor="@color/colorAccent"
            android:textSize="12sp">

        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:textColorHint="@color/purple_200"
        android:id="@+id/edit_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="32dp"
        android:fontFamily="sans-serif-light"
        android:hint="Enter a qr code..."
        android:inputType="textAutoComplete"
        android:layout_margin="12dp"
        android:textSize="16sp" />

    <Button
        android:backgroundTint="@color/colorAccent"
        android:textColor="@color/black"
        android:text="SEARCH"
        android:id="@+id/search"
        android:layout_margin="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </Button>

    <Button
        android:id="@+id/button_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal_200"
        android:text="BACK"
        android:layout_margin="12dp"
        android:textColor="@color/purple_700" />

    <Button
        android:textColor="@color/teal_200"
        android:backgroundTint="@color/purple_700"
        android:layout_margin="12dp"
        android:id="@+id/add_word_fragment_to_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CAMERA">

    </Button>

</LinearLayout>